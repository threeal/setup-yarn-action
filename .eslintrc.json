{
  "root": true,
  "ignorePatterns": ["dist"],
  "extends": ["eslint:recommended"],
  "overrides": [
    {
      "files": ["**/*.mjs"],
      "parserOptions": {
        "ecmaVersion": "2023",
        "sourceType": "module"
      },
      "env": {
        "node": true
      }
    },
    {
      "files": ["package.json"],
      "plugins": ["json-files"],
      "rules": {
        "json-files/sort-package-json": "error"
      }
    }
  ]
}
